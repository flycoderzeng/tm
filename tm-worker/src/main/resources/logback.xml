<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">
    <contextName>tm-worker</contextName>
    <!--输出到控制台 ConsoleAppender-->
    <appender name="consoleLog" class="ch.qos.logback.core.ConsoleAppender">
        <!--展示格式 layout-->
        <layout class="ch.qos.logback.classic.PatternLayout">
            <pattern>
                <pattern>%n[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%thread] [%-5level] %replace(%replace(%caller{1}){'Caller\+0\s+', ' '}){'\s', ' '}%msg</pattern>
            </pattern>
        </layout>
        <encoder>
            <pattern>%n[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%thread] [%-5level] %replace(%replace(%caller{1}){'Caller\+0\s+', ' '}){'\s', ' '}%msg</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <appender name="LOGFILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>C://Users/zengb/Documents/ci/logs/worker.log</file>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>%n[%d{yyyy-MM-dd HH:mm:ss.SSS}] [%thread] [%-5level] %replace(%replace(%caller{1}){'Caller\+0\s+', ' '}){'\s', ' '}%msg</pattern>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>C://Users/zengb/Documents/ci/logs/worker/worker_%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>30</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!--指定最基础的日志输出级别-->
    <root level="INFO">
        <!--appender将会添加到这个loger-->
        <appender-ref ref="consoleLog"/>
        <appender-ref ref="LOGFILE" />
    </root>
</configuration>